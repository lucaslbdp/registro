<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>
        New note
      </h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <input
          type="text"
          name="title"
          class="form-control"
          placeholder="title"
          autofocus
        />
        <div class="form-group">
          <textarea
            name="description"
            placeholder="Description"
            class="form-control"
          ></textarea>
          <button class="btn btn-primary btn-block">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>